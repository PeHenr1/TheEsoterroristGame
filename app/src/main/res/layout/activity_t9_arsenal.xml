<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#404040"
    tools:context=".T9_Arsenal">

    <View
        android:id="@+id/viewInfo"
        android:layout_width="377dp"
        android:layout_height="254dp"
        android:layout_marginTop="15dp"
        android:background="#EDEDED"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view20" />

    <ListView
        android:id="@+id/listaArmas"
        android:layout_width="377dp"
        android:layout_height="254dp"
        android:background="#A6A6A6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/viewInfo" />

    <View
        android:id="@+id/view19"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:background="#5A4535"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnVolt"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/icon_voltar"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/viewInfo"
        app:layout_constraintTop_toTopOf="@+id/viewInfo" />

    <Button
        android:id="@+id/btnIconConfig"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/icon_config"
        app:layout_constraintBottom_toBottomOf="@+id/view19"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view19"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <ImageView
        android:id="@+id/lblArmaImg"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="15dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/viewInfo"
        app:layout_constraintStart_toStartOf="@+id/viewInfo"
        app:layout_constraintTop_toTopOf="@+id/viewInfo"
        app:srcCompat="@drawable/iconvazio" />

    <TextView
        android:id="@+id/lblNomeArma"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/acme"
        android:gravity="center"
        android:text="TextView"
        android:textColor="#000000"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/lblArmaImg"
        app:layout_constraintStart_toStartOf="@+id/lblArmaImg"
        app:layout_constraintTop_toBottomOf="@+id/lblArmaImg" />

    <TextView
        android:id="@+id/textView100"
        android:layout_width="90dp"
        android:layout_height="18dp"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/acme"
        android:gravity="center"
        android:text="Dano atual:"
        android:textColor="#000000"
        android:visibility="invisible"
        app:layout_constraintEnd_toStartOf="@+id/textView101"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblNomeArma" />

    <TextView
        android:id="@+id/lblDanoArma"
        android:layout_width="90dp"
        android:layout_height="18dp"
        android:fontFamily="@font/acme"
        android:gravity="center"
        android:text="TextView"
        android:textColor="#000000"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/textView100"
        app:layout_constraintStart_toStartOf="@+id/textView100"
        app:layout_constraintTop_toBottomOf="@+id/textView100" />

    <TextView
        android:id="@+id/textView101"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:fontFamily="@font/acme"
        android:gravity="center"
        android:text="Dano melhorado:"
        android:textColor="#072B0A"
        android:visibility="invisible"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView100"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textView100" />

    <TextView
        android:id="@+id/lblDanoNovo"
        android:layout_width="0dp"
        android:layout_height="18dp"
        android:fontFamily="@font/acme"
        android:gravity="center"
        android:text="TextView"
        android:textColor="#072B0A"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/textView101"
        app:layout_constraintStart_toStartOf="@+id/textView101"
        app:layout_constraintTop_toBottomOf="@+id/textView101" />

    <TextView
        android:id="@+id/lblDinheiroA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="50dp"
        android:text="1000"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/view19"
        app:layout_constraintEnd_toStartOf="@+id/btnIconConfig"
        app:layout_constraintTop_toTopOf="@+id/view19" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/view19"
        app:layout_constraintEnd_toStartOf="@+id/lblDinheiroA"
        app:layout_constraintTop_toTopOf="@+id/view19"
        app:srcCompat="@drawable/icon_moeda" />

    <View
        android:id="@+id/view20"
        android:layout_width="411dp"
        android:layout_height="247dp"
        android:background="@drawable/fundo_arsenal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view19" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="174dp"
        android:layout_height="206dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/view20"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/npcarsenal" />

    <View
        android:id="@+id/view21"
        android:layout_width="189dp"
        android:layout_height="103dp"
        android:layout_marginBottom="60dp"
        android:background="#C4C4C4"
        app:layout_constraintBottom_toBottomOf="@+id/view20"
        app:layout_constraintStart_toEndOf="@+id/imageView12" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fontFamily="@font/acme"
        android:text="     \n    Eae. Espero que esteja matando\n    muitas criaturas.\n    Tenho umas melhorias que\n    podem ajudar."
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/view21"
        app:layout_constraintEnd_toEndOf="@+id/view21"
        app:layout_constraintStart_toStartOf="@+id/view21"
        app:layout_constraintTop_toTopOf="@+id/view21" />

    <Button
        android:id="@+id/btnMelhorar"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginBottom="5dp"
        android:background="#187C16"
        android:fontFamily="@font/acme"
        android:text=" Melhorar arma"
        android:textColor="#000000"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/viewInfo"
        app:layout_constraintEnd_toEndOf="@+id/viewInfo"
        app:layout_constraintStart_toStartOf="@+id/viewInfo" />

</android.support.constraint.ConstraintLayout>